#!/bin/bash

# Script para ejecutar scripts de login SSH por nombre
# Uso: sshlogin nombre [contrase√±a]

# Verificar argumentos
if [ $# -lt 1 ]; then
    echo "‚ùå Error: Debes proporcionar al menos el nombre del sitio"
    echo "Uso: $(basename $0) nombre [contrase√±a]"
    echo "Ejemplo: $(basename $0) servidor1"
    exit 1
fi

NOMBRE=$1
SCRIPT_PATH="$HOME/.ssh/${NOMBRE}_login.exp"

# Verificar si existe el script
if [ ! -f "$SCRIPT_PATH" ]; then
    echo "‚ùå Error: No se encontr√≥ el script de login para '$NOMBRE'"
    echo "Revisa si existe el archivo: $SCRIPT_PATH"
    
    # Listar sitios disponibles
    AVAILABLE=$(find "$HOME/.ssh/" -name "*_login.exp" | sed 's|.*/\(.*\)_login.exp|\1|' | sort)
    if [ -n "$AVAILABLE" ]; then
        echo -e "\nüìã Sitios disponibles:"
        echo "$AVAILABLE" | while read site; do
            echo "  - $site"
        done
    else
        echo -e "\n‚ö†Ô∏è No hay sitios configurados. Usa ssh_setup.sh para configurar uno."
    fi
    
    exit 1
fi

# Ejecutar el script con los argumentos adicionales (si hay)
if [ $# -gt 1 ]; then
    # Pasar todos los argumentos adicionales al script (√∫til para pasar la contrase√±a)
    shift
    "$SCRIPT_PATH" "$@"
else
    "$SCRIPT_PATH"
fi
